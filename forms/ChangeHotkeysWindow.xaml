<Window x:Class="TarkovAssistantWPF.forms.ChangeHotkeysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TarkovAssistantWPF.forms"
        mc:Ignorable="d"
        Title="Tarkov Assistant - Change Hotkeys" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="FormHotkeys_Table" Margin="10,10,10,40" CanVerticallyScroll="True"/>
        
        <WrapPanel Height="35" VerticalAlignment="Bottom">
            <Button x:Name="FormHotkeys_SaveChangesButton" Click="FormHotkeys_SaveChangesButton_OnClick" Content="Save" Width="100" Height="25"  VerticalAlignment="Bottom" Margin="10,0"></Button>

            <Button x:Name="FormHotkeys_ResetBindingsButton" Click="FormHotkeys_ResetBindingsButton_OnClick" Content="Reset" Width="100" Height="25" VerticalAlignment="Bottom"/>
        </WrapPanel>
    </Grid>
</Window>
